# ==========================================
# VARIABILI D'AMBIENTE — GestIA
# Copia questo file in .env e compila i valori
# ==========================================

# Database (PostgreSQL su Supabase o altro)
DATABASE_URL="postgresql://user:password@host:5432/dbname"

# NextAuth
AUTH_SECRET="genera-con: openssl rand -base64 32"
NEXTAUTH_URL="http://localhost:3000"

# URL dell'applicazione (usato nei link email)
APP_URL="http://localhost:3000"

# Email mittente (formato: "Nome <email>")
FROM_EMAIL="GestIA <noreply@gestia.app>"

# Resend (https://resend.com) — API Key per invio email
# Gratuito fino a 3.000 email/mese
RESEND_API_KEY="re_..."
